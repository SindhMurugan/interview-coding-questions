1. Check whether a character is a vowel or consonant 
c = 'a'
vowels =['a' , 'e' , 'i','o','u']

// approach-1
if(vowels.includes(c)) {
    console.log("true")
}
else{
    console.log(false)
}

2. Check whether a character is an alphabet or not

#approach -1
c = 'a'
if('a' <= c || 'A' <= c){
    console.log(true)
}
else{
    console.log(false)
}

3. Calculating the length of the string
string = 'Hello'
// approach-1
length =0
for(let char of string){
    length+=1
}

// approach-2
length = string.length

console.log(length)

4. Toggle each character in a string

string = 'GuDDuBHaiyA'

// approach -1
toggledString =""
for(let char of string){
    toggledString += char == char.toUpperCase() ? char.toLowerCase(): char.toUpperCase() 
}

5. Program to find the ASCII value of a character
char ='z'

console.log(char.charCodeAt(0))

// 6.count the number of vowels in a string

let input ="PrepInsta"

let vowels =['a' , 'e' , 'i' , 'o' , 'u']
let count =0
for(let char of input){
    if(vowels.includes(char.toLowerCase())){
        count+=1
    }
}

// 7.Program to Remove Vowels from a String

let input ="PrepInsta"
// approach -1
let vowels =['a' , 'e' , 'i' , 'o' , 'u']
let output =""
for(let char of input){
    if(!vowels.includes(char.toLowerCase())){
       output += char
    }
}



// 8. Write a program to check whether a string is palindrome 
input_string = 'civic'

// approach -1
if(input_string == input_string.split("").reverse().join("")){
    console.log(true)
}
else{
    console.log(false)
}

// approach -2
function checkPalindrome(){
let i=0
let j = input_string.length-1
while(i <= j){
    if(input_string[i] != input_string[j]) return false
    i+=1
    j-=1
}

return true
}


// 9. Write a program to check whether a string is palindrome 
input_string = 'civicyxd'

// approach -1
output = input_string.split("").reverse("").join("")

// approach -2
let output =""

for(let i=input_string.length-1 ; i>=0;i--){
    output += input_string[i]
}

// 10. program to remove all character from string except alphabets

String1 = "#Justice!For@Chutki123"

// approch -1
let output =""
for(let char of String1){
    if('a' <= char || 'A' <= char){
        output += char
    }
}

// 11.Remove Spaces from a String
let String = "PrepInsta is fabulous"
// approach -1
let output =""
for(let char of String.split(" ")){
    output += char
}


// 12.// Remove brackets from an algebraic expression
let output =""
let input ="(x+y)+(z+q)"

for(let char of input){
   if(!(char == '(' || char == ')')){
       output += char
   }
}

// 13.Count the Sum of Numbers in a String
let String = "Daya123Ben456"
// #initialize integer variable
sum1 = 0

for(let char of String){
    if(+(char)){
        sum1+=+(char)
    }
}

// 14.convert first and last letter of string to Upper-Case
let char = "prepinsta"
let output = char.charAt(0).toUpperCase()+char.slice(1,char.length-2)+char.slice(char.length-1).toUpperCase()

// 15. check if two Strings are Anagram or not
// approach -1
String1 = "Listen"
String2 = "Silent"

function anagram(){
    for(let char of String1){
    if(!String2.toUpperCase().includes(char.toUpperCase())){
        return false
    }
    return true
    }
}

console.log(anagram())

// apprach -2

let arr1 = String1.toUpperCase().split("").sort((a,b) => a.localeCompare(b)).join("")
let arr2 = String2.toUpperCase().split("").sort((a,b) => a.localeCompare(b)).join("")

console.log(arr1 == arr2)





